# default script for Plex Media Server

# the number of plugins that can run at the same time
export PLEX_MEDIA_SERVER_MAX_PLUGIN_PROCS=6

# ulimit -s $PLEX_MEDIA_SERVER_MAX_STACK_SIZE
export PLEX_MEDIA_SERVER_MAX_STACK_SIZE=3000

# where the mediaserver should store the transcodes
export PLEX_MEDIA_SERVER_TMPDIR="/apps/plexmediaserver/tmp"

# uncomment to set it to something else
export PLEX_MEDIA_SERVER_APPLICATION_SUPPORT_DIR="/apps/plexmediaserver/MediaLibrary"

# We need to catch our libraries
export LD_LIBRARY_PATH="/apps/plexmediaserver/Binaries:$LD_LIBRARY_PATH"
